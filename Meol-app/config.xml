<?xml version='1.0' encoding='utf-8'?>
<widget id="eu.NaturalSolutions.Meol" version="1.2.0" android-versionCode="120" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Meol</name>
    <description>
        Mobile Encyclopedia Of Life : Become a global explorer, discovering species by travelling around the world.
    </description>
    <author email="contact@natural-solutions.eu" href="http://www.natural-solutions.eu">
        Natural Solutions 
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="landscape" />
    <preference name="target-device" value="tablet" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-inappbrowser" spec="~1.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.1" />
</widget>
